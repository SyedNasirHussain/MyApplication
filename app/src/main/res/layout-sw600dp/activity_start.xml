<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.fast.all.video.downloader.StartActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        android:layout_height="60dp"
        android:background="@drawable/pbg">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Video Downloader"
            android:paddingTop="10dp"
            android:textColor="#1d1d1d"
            android:textSize="25dp"/>
    </android.support.v7.widget.Toolbar>
<LinearLayout
    android:layout_below="@+id/toolbar"
    android:id="@+id/T2"
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:layout_height="180dp"
    android:orientation="horizontal"
    android:layout_marginTop="130dp"
    >
        <Button
            android:layout_marginRight="30dp"
            android:paddingTop="70dp"
            android:id="@+id/button2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button1" />

    <Button
            android:paddingTop="70dp"
            android:id="@+id/button3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/button2"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button2" />
</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/T2"
        android:id="@+id/T3"
        android:gravity="center"
        android:layout_marginTop="110dp"
        android:layout_height="180dp">
            <Button
                android:layout_marginRight="30dp"
                android:id="@+id/button6"
                android:background="@drawable/button6"
                android:layout_width="200dp"
                android:layout_height="200dp"
                />
        <Button
            android:id="@+id/button4"
            android:paddingTop="70dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/button3" />
        </LinearLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/baar"
        android:layout_centerHorizontal="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_home_footer"></com.google.android.gms.ads.AdView>
    <LinearLayout
        android:gravity="center"
        android:background="@drawable/pbg"
        android:id="@+id/baar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        >

        <Button
            android:id="@+id/button8"
            android:background="@drawable/button7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="4dp"
            />
        <Button
            android:layout_marginLeft="6dp"
            android:id="@+id/button7"
            android:background="@drawable/button4"
            android:layout_width="100dp"
            android:layout_height="100dp"

            />
        <Button
            android:layout_marginLeft="6dp"
            android:id="@+id/button9"
            android:background="@drawable/button5"
            android:layout_width="100dp"
            android:layout_height="100dp"

            />
        <Button
            android:layout_marginLeft="6dp"
            android:id="@+id/button10"
            android:background="@drawable/button8"
            android:layout_width="100dp"
            android:layout_height="100dp"

            />
        <Button
            android:layout_marginLeft="6dp"
            android:id="@+id/button11"
            android:background="@drawable/button9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />
    </LinearLayout>
   </RelativeLayout>